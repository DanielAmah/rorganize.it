%article.post
  .post-picture
    = image_tag(post.preview_picture)
  %header
    - if current_person.admin? && post.draft?
      %p.post-draft
        It's a draft!
    %h2.post-title= link_to "#{post.try(:title)}", post_path(post)
    %p.post-meta
      = post.person.first_name if post.person
      |
      \#{show_date(post)}
    %p
      =truncate(post.description, length: 130)
    %p.post-cta
      = link_to "Read more", post_path(post), title: "Read the post #{post.title}"
